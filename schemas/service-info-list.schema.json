{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Service Info",
    "type": "array",
    "description": "Information about organization Medleys works with",
    "items": {
        "type": "object",
        "properties": {
            "organization": {
                "type": "string",
                "description": "The name of the organization"
            },
            "slug": {
                "type": "string",
                "description": "Slugified name, e.g., lowercased and delimited with hyphens, used to identify the picture(s)"
            },
            "description": {
                "type": "string",
                "description": "Description of how Medleys works with the organization"
            },
            "images": {
                "type": "integer",
                "description": "The number of images to use for the carousel",
                "minimum": 0
            },
            "links": {
                "type": "array",
                "description": "The list of links associated with the organization and Medleys' involvement",
                "items": {
                    "type": "object",
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The text to display"
                        },
                        "url": {
                            "type": "string",
                            "format": "uri",
                            "description": "The link associated with the text"
                        }
                    },
                    "required": [
                        "text",
                        "url"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "organization",
            "slug",
            "description",
            "images",
            "links"
        ],
        "additionalProperties": false
    }
}